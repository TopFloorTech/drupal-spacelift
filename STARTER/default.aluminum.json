{
  "paths": {
    "baseComponents": "base-components",
    "dist": {
      "dir": "dist",
      "css": "css",
      "js": "js",
      "fonts": "fonts",
      "icons": "icons"
    },
    "src": {
      "dir": "src",
      "fonts": "fonts",
      "icons": "icons",
      "js": "js",
      "scss": "scss"
    },
    "images": "images"
  },
  "images": {
    "loadImages": true,
    "imageminEnabled": false
  },
  "sources": {
    "scss": ["src/scss/**/*.scss", "base-components/*/scss/**/*.scss"],
    "images": "images/**/*.+(jpeg|jpg|png|gif|svg)",
    "fonts": "src/fonts/*.{ttf,otf}",
    "js": ["src/js/**/*.js", "base-components/*/js/**/*.js"],
    "icons": "src/icons",
    "iconFiles": "*.svg",
    "twig": ["templates/**/*.html.twig", "base-components/*/templates/**/*.html.twig"]
  },
  "assets": {},
  "browserSync": {
    "enabled": false
  },
  "drush": {
    "enabled": false
  },
  "icons": {
    "enabled": true
  },
  "fonts": {
    "enabled": false
  },
  "fontAwesome": {
    "enabled": false
  },
  "lando": {
    "enabled": false
  },
  "modernizr": {
    "enabled": false
  },
  "sass": {
    "enabled": true
  },
  "scripts": {
    "enabled": true
  },
  "twig": {
    "enabled": false
  }
}
