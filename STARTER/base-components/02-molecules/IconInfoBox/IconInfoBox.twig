{#
/**
 * @file
 * Icon Info Box
 * used in organisms/IconInfoBoxes
 *
 * Available variables:
 * - icon_info_box__base_class - the base class name
 * - icon_info_box__modifiers - array of modifiers to add to the base classname
 * - icon_info_box__blockname - blockname prepended to the base classname
 * - icon_info_box__extra_classes - extra classes
 * - icon_info_box__icon - path to the SVG icon
 * - icon_info_box__title - title
 * - icon_info_box__body - body content
 */
#}

{% set icon_info_box__base_class = icon_info_box__base_class|default('IconInfoBox') %}
{% set icon_info_box__extra_classes = icon_info_box__extra_classes|default(['FlexRow-item']) %}


<div {{ suit(icon_info_box__base_class, icon_info_box__modifiers, icon_info_box__blockname, icon_info_box__extra_classes) }}>
  <div {{ suit('container', icon_info_box__modifiers, icon_info_box__base_class) }}>
    {% if icon_info_box__icon %}
      <div {{ suit('icon', icon_info_box__modifiers, icon_info_box__base_class) }}>
        {{ icon_info_box__icon }}
      </div>
    {% endif %}
    <div {{ suit('text', icon_info_box__modifiers, icon_info_box__base_class) }}>
      {% include '@atoms/text/Heading/Heading.twig' with {
        heading__base_class: 'h4',
        heading__level: 3,
        heading: icon_info_box__title,
      } %}
      {% include '@atoms/text/Paragraph.twig' with {
        paragraph__content: icon_info_box__body,
      } %}
    </div>
  </div>
</div>
