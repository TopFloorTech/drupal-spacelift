{#
/**
 * @file
 * Resource Category Icon Block
 *
 * Available variables:
 * - resource_category_icon_block__base_class - the base class name
 * - resource_category_icon_block__modifiers - array of modifiers to add to the base classname
 * - resource_category_icon_block__blockname - blockname prepended to the base classname
 * - resource_category_icon_block__extra_classes - extra classes
 *
 * - resource_category_icon_block__icon- image
 * - resource_category_icon_block__body
 * - resource_category_icon_block__url
 */
#}

{% set resource_category_icon_block__base_class = resource_category_icon_block__base_class|default('ResourceCategoryIconBlock') %}

<div {{ suit(resource_category_icon_block__base_class, resource_category_icon_block__modifiers, resource_category_icon_block__blockname, resource_category_icon_block__extra_classes) }}>
  <a {{ suit('container', resource_category_icon_block__modifiers, resource_category_icon_block__base_class ) }} href="{{ resource_category_icon_block__url }}" title="{{ resource_category_icon_block__title }}">
    <div {{ suit('icon', resource_category_icon_block__modifiers, resource_category_icon_block__base_class ) }}>
      {{ resource_category_icon_block__icon }}
    </div>
    <div {{ suit('titleContainer', resource_category_icon_block__modifiers, resource_category_icon_block__base_class ) }}>
      {% include '@atoms/text/Heading/Heading.twig' with {
        heading__base_class: '',
        heading__level: 4,
        heading: resource_category_icon_block__title,
        heading__extra_classes: ['ResourceCategoryIconBlock-title'],
      } %}
    </div>
  </a>
</div>
