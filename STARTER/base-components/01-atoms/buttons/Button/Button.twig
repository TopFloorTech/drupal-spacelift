{#
/**
 * @file
 * Template for an HTML button element
 *
 * Available variables:
 * - button__base_class - the base classname
 * - button__modifiers - array of modifiers to add to the base classname
 * - button__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
 * - button__content - the content of the button (typically text)
 *
 * Available blocks:
 * - button__content - used to replace the content of the button with something other than text
 *   for example: to insert an icon
 */
#}

{{ attach_library('msi/Buttons') }}

{% set button__base_class = button__base_class|default('Button') %}

{% set additional_attributes = {
  class: suit(button__base_class, button__modifiers, button__blockname),
  data_open: data_open|default(''),
} %}

<button {{ add_attributes(additional_attributes) }}>
  {% block button__content %}
    {{ button__content }}
  {% endblock %}
</button>
