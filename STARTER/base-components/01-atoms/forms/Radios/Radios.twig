{% if not attributes %}
<fieldset class="FormItem form-item--radios">
  <legend class="h3">Options as Radios:</legend>
  <ul class="FormItem--radios Radios">
{% endif %}
  {% for key, radio in radios %}
    {% include '@atoms/forms/Radios/_Radio.twig' with {
      radio__item: radio.title,
      radio__item_checked: radio.checked,
    } %}
  {% endfor %}
{% if not attributes %}
  </ul>
</fieldset>
{% endif %}
