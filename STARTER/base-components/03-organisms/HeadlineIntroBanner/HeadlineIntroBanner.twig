{#
/**
 * @file
 * H1 Intro Banner
 *
 * Available variables:
 * - headline_intro_banner__base_class - the base class name
 * - headline_intro_banner__modifiers - array of modifiers to add to the base classname
 * - headline_intro_banner__blockname - blockname prepended to the base classname
 * - headline_intro_banner__extra_classes - extra classes
 * -
 * - headline_intro_banner__title
 * - headline_intro_banner__body
 * - headline_intro_banner__button_title
 * - headline_intro_banner__url
*/
#}
{% set headline_intro_banner__base_class = headline_intro_banner__base_class|default('HeadlineIntroBanner') %}
{% set headline_intro_banner__extra_classes = headline_intro_banner__extra_classes|default(['section','bg-dark-blue']) %}

<header
  {{ suit(headline_intro_banner__base_class, headline_intro_banner__modifiers, headline_intro_banner__blockname, headline_intro_banner__extra_classes) }}>
  <div class="grid-container">
    {% include '@atoms/accents/Line/Line.twig' %}

    <div class="grid-x grid-margin-x">
      <div class="title cell large-5">
        {% include '@atoms/text/Heading/Heading.twig' with {
          heading__base_class: '',
          heading__level: 1,
          heading: headline_intro_banner__title,
          heading__extra_classes: ['title', 'white'],
          heading__more: "itemprop='headline'"
        } %}
        <a href="{{ headline_intro_banner__url }}" class="button" title="{{ headline_intro_banner__button_title }}">{{ headline_intro_banner__button_title }} <span
            class="fas fa-caret-right"></span></a>
      </div>
      <div class="cell large-7">
        <p>{{ headline_intro_banner__body }}</p>
      </div>
    </div>
  </div>
</header>
