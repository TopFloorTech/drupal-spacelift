{#
/**
 * @file
 * Contact Us Box
 * This really seems like something that should just not be its own component, but Melanie had some very specific styling requests.
 *
 * Available variables:
 * - contact_us_box__base_class - the base class name
 * - contact_us_box__modifiers - array of modifiers to add to the base classname
 * - contact_us_box__blockname - blockname prepended to the base classname
 * - contact_us_box__extra_classes - extra classes
 * -
 * - contact_us_box__title
 * - contact_us_box__body
 * - contact_us_box__button_title
 * - contact_us_box__url
*/
#}
{% set contact_us_box__base_class = contact_us_box__base_class|default('ContactUsBox') %}
{% set contact_us_box__extra_classes = contact_us_box__extra_classes|default(['bg-light','text-center']) %}

<div {{ suit(contact_us_box__base_class, contact_us_box__modifiers, contact_us_box__blockname, contact_us_box__extra_classes) }}>
  <div {{ suit('text', contact_us_box__modifiers, contact_us_box__base_class) }}>
    {% include '@atoms/text/Heading.twig' with {
      heading__base_class: '',
      heading__level: 2,
      heading: contact_us_box__title,
    } %}

    {{ contact_us_box__body }}
    <p>Speak with a CSR:
      <a href="tel:+1800234-0135">
        <span class="fas fa-phone"></span>
        (800) 234-0135
      </a>
    </p>
    <a href="{{ contact_us_box__url }}" class="button">{{ contact_us_box__button_title }} <span class="fas fa-caret-right"></span></a>
  </div>
</div>
