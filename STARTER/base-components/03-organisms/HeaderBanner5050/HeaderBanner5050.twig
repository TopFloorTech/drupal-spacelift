{#
/**
 * @file
 * HeaderBanner5050
 *
 * Available variables:
 * - header_banner_5050__base_class - the base class name
 * - header_banner_5050__modifiers - array of modifiers to add to the base classname
 * - header_banner_5050__blockname - blockname prepended to the base classname
 * - header_banner_5050__extra_classes - extra classes
 * -
 * - header_banner_5050__image
 * - header_banner_5050__title
 * - header_banner_5050__body
*/
#}
{% set header_banner_5050__base_class = header_banner_5050__base_class|default('HeaderBanner5050') %}
{% set header_banner_5050__extra_classes = header_banner_5050__extra_classes|default(['']) %}

<header {{ suit(header_banner_5050__base_class, header_banner_5050__modifiers, header_banner_5050__blockname, header_banner_5050__extra_classes) }}
  style="background: url({{ header_banner_5050__image }}) no-repeat center; background-size: cover;">
  <div class="grid-x">
    <div
      {{ suit('text', header_banner_5050__modifiers, header_banner_5050__base_class, ['cell', 'medium-6'] ) }}>
      <div
        {{ suit('textWrap', header_banner_5050__modifiers, header_banner_5050__base_class) }}>
        {% include '@atoms/text/Heading.twig' with {
          heading__base_class: '',
          heading__level: 1,
          heading: header_banner_5050__title,
          heading__extra_classes: ['HeaderBanner5050-title'],
          heading__more: "itemprop='headline'"
        } %}
        <p class="large">{{ header_banner_5050__body }}</p>
      </div>
    </div>
  </div>
</header>
